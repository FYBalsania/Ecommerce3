@model List<Ecommerce3.Admin.ViewModels.Common.SelectListViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="row">
        <div class="col-md-12">
            <label asp-for="@Model[i].Id">@Model[i].Text</label>

            <select class="form-control"
                    asp-for="@Model[i].Id"
                    asp-items="@Model[i].Values">
                <option value="">Select...</option>
            </select>

            <span class="text-danger"
                  asp-validation-for="@Model[i].Id"></span>
        </div>
    </div>
}
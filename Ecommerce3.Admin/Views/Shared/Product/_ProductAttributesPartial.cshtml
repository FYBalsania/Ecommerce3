@model List<Ecommerce3.Admin.ViewModels.Common.SelectListViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="mb-3">
        <div class="col-md-12">
            <label class="form-label fw-bold required">@Model[i].Text</label>

            <select class="form-select" 
                    name="AttributeValues[@i]" 
                    id="AttributeValues_@i" 
                    data-val="true"  
                    data-val-required="Please select @Model[i].Text">
                <option value="">Select...</option>
                @foreach (var item in Model[i].Values)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <span class="text-danger field-validation-valid" 
                  data-valmsg-for="AttributeValues[@i]" 
                  data-valmsg-replace="true"></span>
        </div>
    </div>
}
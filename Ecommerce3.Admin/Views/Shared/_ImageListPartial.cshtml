@model IReadOnlyList<Ecommerce3.Contracts.DTOs.Image.ImageDTO>

<tbody id="imagesTableBody">
@foreach (var image in Model)
{
    <tr>
        <td>
            <img src="https://placehold.co/60x60" class="img-fluid rounded"/>
        </td>
        <td>@image.FileName</td>
        <td>@image.Size</td>
        <td>@image.AltText</td>
        <td>@image.Title</td>
        <td>@image.Loading</td>
        <td>
            @if (image.Link != null)
            {
                <a href="@image.Link">@image.Link</a>
            }
        </td>
        <td>@image.LinkTarget</td>
        <td class="text-end">@image.SortOrder</td>
        <td class="text-center">
            <a href="#" data-bs-toggle="modal" data-bs-target="#editImageModal1">
                <i class="fas fa-edit me-2 fs-6 text-success"></i>
            </a>
            <a href="#" data-bs-toggle="modal" data-bs-target="#deleteImageModal1">
                <i class="fas fa-trash fs-6 text-danger"></i>
            </a>
        </td>
    </tr>
}
</tbody>
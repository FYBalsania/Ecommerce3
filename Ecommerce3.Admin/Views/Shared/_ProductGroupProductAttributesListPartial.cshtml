@model Ecommerce3.Admin.ViewModels.ProductGroup.EditProductGroupViewModel

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted py-2">
            <i class="fas fa-list"></i> Product Attribute
        </h5>
        <a href="javascript:;" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addAttributeModal">
            <i class="fas fa-plus"></i> Add Attribute
        </a>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th style="width: 20%;">Name</th>
                        <th style="width: 65%;">Values/Display</th>
                        <th class="text-end" style="width: 10%;">Sort Order</th>
                        <th class="text-center" style="width: 5%;">Action</th>
                    </tr>
                    </thead>
                    <partial name="_ProductGroupProductAttributesListItemPartial" model="Model.Attirbutes"/>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_ProductAttributesPartial" />

<!-- Edit Attribute Modal -->
<div class="modal fade" id="editAttributeModal" tabindex="-1" aria-labelledby="editAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="editAttributeModalLabel">
                    <i class="fas fa-plus"></i> Edit Attribute - Colour
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control form-control-solid" value="Colour" readonly="readonly">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Sort Order</label>
                            <input type="number" class="form-control" value="1">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Values</label>
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Sort Order</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Red" checked>
                                            <label class="form-check-label" for="edit_Red">Red</label>
                                        </td>
                                        <td>
                                            <input type="text" value="1"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Yellow" checked>
                                            <label class="form-check-label" for="edit_Yellow">Yellow</label>
                                        </td>
                                        <td>
                                            <input type="text" value="2"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Green" checked>
                                            <label class="form-check-label" for="edit_Green">Green</label>
                                        </td>
                                        <td>
                                            <input type="text" value="3"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Blue">
                                            <label class="form-check-label" for="edit_Blue">Blue</label>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Orange">
                                            <label class="form-check-label" for="edit_Orange">Orange</label>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="w-75">
                                            <input class="form-check-input" type="checkbox" id="edit_Purple">
                                            <label class="form-check-label" for="edit_Purple">Purple</label>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
</div>
@model IReadOnlyList<Ecommerce3.Admin.ViewModels.Image.ImageListItemViewModel>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted py-2">
            <i class="fas fa-image"></i> Images
        </h5>
        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addImageModal">
            <i class="fas fa-plus"></i> Add Image
        </button>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Image Name</th>
                        <th>Size</th>
                        <th>Alt Text</th>
                        <th>Title</th>
                        <th>Loading</th>
                        <th>Link</th>
                        <th>Target</th>
                        <th class="text-end">Sort Order</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    <partial name="_ImagesPartial" model="@Model"/>
                </table>
            </div>
        </div>

    </div>
</div>

<!-- Add Image Modal -->
<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="addImageModalLabel">
                    <i class="fas fa-plus"></i> Add New Image
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Type</label>
                            <select class="form-select">
                                <option asp-for="">Select Type</option>
                                <option asp-for="banner">Banner</option>
                                <option asp-for="Grid">Grid</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Image</label>
                            <input type="file" class="form-control" accept="image/*">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Size</label>
                            <select class="form-select">
                                <option value="">Select Size</option>
                                <option value="xsmall">X-Small</option>
                                <option value="small">Small</option>
                                <option value="medium">Medium</option>
                                <option value="large">Large</option>
                                <option value="xlarge">X-Large</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Sort Order</label>
                            <input type="number" class="form-control" value="1">
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Image Name</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Alt Text</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Title</label>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Loading</label>
                            <select class="form-select">
                                <option value="">Select Loading</option>
                                <option value="lazy">Lazy</option>
                                <option value="eager">Eager</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Link</label>
                            <input type="url" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Target</label>
                            <select class="form-select">
                                <option value="">Select Target</option>
                                <option value="_blank">Blank</option>
                                <option value="_parent">Parent</option>
                                <option value="_top">Top</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Image</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Image Modal -->
<div class="modal fade" id="editImageModal1" tabindex="-1" aria-labelledby="editImageModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="editImageModalLabel1">
                    <i class="fas fa-edit"></i> Edit Image - brand-banner-1.jpg
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Type</label>
                        <select class="form-select">
                            <option value="">Select Type</option>
                            <option value="banner" selected>Banner</option>
                            <option value="grid">Grid</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Size</label>
                        <select class="form-select">
                            <option value="">Select Size</option>
                            <option value="xsmall">X-Small</option>
                            <option value="small">Small</option>
                            <option value="medium">Medium</option>
                            <option value="large" selected>Large</option>
                            <option value="xlarge">X-Large</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Sort Order</label>
                        <input type="number" class="form-control" value="1">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Image Name</label>
                        <input type="text" class="form-control" value="brand-banner-1.jpg">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Alt Text</label>
                        <input type="text" class="form-control" value="Main Brand Banner">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Title</label>
                        <input type="text" class="form-control" value="Brand Banner">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Loading</label>
                        <select class="form-select">
                            <option value="">Select Loading</option>
                            <option value="lazy" selected>Lazy</option>
                            <option value="eager">Eager</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Link</label>
                        <input type="url" class="form-control" value="https://example.com">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Target</label>
                        <select class="form-select">
                            <option value="">Select Target</option>
                            <option value="_blank" selected>Blank</option>
                            <option value="_parent">Parent</option>
                            <option value="_top">Top</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Update Image</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Image Modal (for first image) -->
<div class="modal fade" id="deleteImageModal1" tabindex="-1" aria-labelledby="deleteImageModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header text-danger">
                <h5 class="modal-title" id="deleteImageModalLabel1">
                    <i class="fas fa-trash"></i> Delete Image
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted">
                    Are you sure you want to delete <span class="text-danger">brand-banner-1.jpg</span>?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
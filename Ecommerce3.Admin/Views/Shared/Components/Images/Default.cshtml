@using Ecommerce3.Domain.Enums
@model (string ParentEntityType, string ParentEntityId, string ImageEntityType, IReadOnlyList<Ecommerce3.Contracts.DTOs.Image.ImageDTO> Images)

<div class="card mb-4">
    <input type="hidden" id="ParentEntityType" value="@Model.ParentEntityType"/>
    <input type="hidden" id="ParentEntityId" value="@Model.ParentEntityId"/>
    <input type="hidden" id="ImageEntityType" value="@(Model.ImageEntityType)"/>

    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted py-2">
            <i class="fas fa-image"></i> Images
        </h5>
        <a class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addImageModal">
            <i class="fas fa-plus"></i> Add Image
        </a>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Image Name</th>
                        <th>Size</th>
                        <th>Alt Text</th>
                        <th>Title</th>
                        <th>Loading</th>
                        <th>Link</th>
                        <th>Target</th>
                        <th class="text-end">Sort Order</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    <partial name="_ImageListPartial" model="@Model.Images"/>
                </table>
            </div>
        </div>
    </div>
</div>

@* Add *@
<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="addImageModalLabel">
                    <i class="fas fa-plus"></i> Add New Image
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body" id="addImageModalBody">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_ImageTypeId">Type:</label>
                            <select class="form-select" id="add_ImageTypeId">
                                <option value="">Select...</option>
                            </select>
                            <span class="text-danger" id="add_ImageTypeIdError"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_ImageSize">Size:</label>
                            <select class="form-select" id="add_ImageSize">
                                <option value="">Select...</option>
                                <option value="@ImageSize.XSmall">X Small</option>
                                <option value="@ImageSize.Small">Small</option>
                                <option value="@ImageSize.Medium">Medium</option>
                                <option value="@ImageSize.Large">Large</option>
                                <option value="@ImageSize.XLarge">X Large</option>
                            </select>
                            <span class="text-danger" id="add_ImageSizeError"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_File">File:</label>
                            <input type="file" class="form-control" id="add_File" accept="image/*"/>
                            <span class="text-danger" id="add_FileError"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_AltText">Alt. text:</label>
                            <input type="text" class="form-control" id="add_AltText"/>
                            <span class="text-danger" id="add_AltTextError"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_Title">Title:</label>
                            <input type="text" class="form-control" id="add_Title"/>
                            <span class="text-danger" id="add_TitleError"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_Loading">Loading:</label>
                            <select class="form-select" id="add_Loading">
                                <option value="eager" selected="selected">Eager</option>
                                <option value="lazy">Lazy</option>
                            </select>
                            <span class="text-danger" id="add_LoadingError"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_SortOrder">Sort order:</label>
                            <input type="text" class="form-control" id="add_SortOrder"/>
                            <span class="text-danger" id="add_SortOrderError"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_Link">Link:</label>
                            <input type="url" class="form-control" id="add_Link"/>
                            <span class="text-danger" id="add_LinkError"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="add_LinkTarget">Link target:</label>
                            <select class="form-select" id="add_LinkTarget" disabled>
                                <option value="">Select...</option>
                                <option value="_blank">Blank</option>
                                <option value="_self">Self</option>
                            </select>
                            <span class="text-danger" id="add_LinkTargetError"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="add_Save">Save</button>
            </div>
        </div>
    </div>
</div>


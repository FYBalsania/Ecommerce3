@model (Type ParentEntityType, int ParentEntityId, Type ImageEntityType, IReadOnlyList<Ecommerce3.Admin.ViewModels.Image.ImageListItemViewModel> Images)

<div class="card mb-4">
    <input type="hidden" id="ParentEntityType" value="@Model.ParentEntityType.Name" />
    <input type="hidden" id="ParentEntityId" value="@Model.ParentEntityId" />
    <input type="hidden" id="ImageEntityType" value="@(Model.ImageEntityType.Name)" />

    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted py-2">
            <i class="fas fa-image"></i> Images
        </h5>
        <a class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addImageModal">
            <i class="fas fa-plus"></i> Add Image
        </a>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Image Name</th>
                        <th>Size</th>
                        <th>Alt Text</th>
                        <th>Title</th>
                        <th>Loading</th>
                        <th>Link</th>
                        <th>Target</th>
                        <th class="text-end">Sort Order</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    <partial name="_ImagesPartial" model="@Model.Images"/>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="addImageModalLabel">
                    <i class="fas fa-plus"></i> Add New Image
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body" id="addImageModalBody">
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Image</button>
            </div>
        </div>
    </div>
</div>
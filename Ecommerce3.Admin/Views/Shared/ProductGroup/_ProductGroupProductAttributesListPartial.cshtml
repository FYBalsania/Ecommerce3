@model Ecommerce3.Admin.ViewModels.ProductGroup.EditProductGroupViewModel

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted py-2">
            <i class="fas fa-list"></i> Product Attribute
        </h5>
        <a href="javascript:;" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addAttributeModal">
            <i class="fas fa-plus"></i> Add Attribute
        </a>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th style="width: 20%;">Name</th>
                        <th style="width: 65%;">Values/Display</th>
                        <th class="text-end" style="width: 10%;">Sort Order</th>
                        <th class="text-center" style="width: 5%;">Action</th>
                    </tr>
                    </thead>
                    <partial name="ProductGroup/_ProductGroupProductAttributesListItemPartial" model="Model.Attirbutes"/>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="ProductGroup/_ProductAttributesAddModalPartial" />

@model Ecommerce3.Admin.ViewModels.Brand.BrandsIndexResponse

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Brands</h2>

        <!-- Right side: button -->
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="Brands" asp-action="Add">
                <i class="fas fa-plus"></i> Add New
            </a>
            <!-- Add more button here -->
        </div>
    </div>

    <!-- Main Content -->
    <form method="get" asp-controller="Brands" asp-action="Index">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <label class="form-label fw-bold" asp-for="Filter.Name">Name contains</label>
                        <input type="text" class="form-control" asp-for="Filter.Name" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Is active</label>
                        <select class="form-select" asp-for="Filter.IsActive">
                            <option value="" selected="selected">Any</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary px-4">Filter</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="card mb-4">
        <div class="card-body">
            <!-- Brand Table -->
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th style="width: 50%;">Name & Slug</th>
                        <th class="text-end" style="width: 10%;">Sort Order</th>
                        <th class="text-end" style="width: 10%;">Images</th>
                        <th class="text-end" style="width: 20%;">Created</th>
                        <th class="text-center" style="width: 10%;">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var brand in Model.Brands.Data)
                    {
                        <tr>
                            <td>
                                @brand.Name <span
                                    class="badge @(brand.IsActive ? "bg-success" : "bg-danger") ms-2"> </span><br/>
                                <span class="text-muted">@brand.Slug</span>
                            </td>
                            <td class="text-end">@brand.SortOrder</td>
                            <td class="text-end">@brand.ImageCount</td>
                            <td class="text-end">@brand.CreatedUserFullName <br/>@brand.CreatedAt.ToString("dd-MMM-yyyy HH:mm tt")
                            </td>
                            <td class="text-center">
                                <a asp-controller="Brands" asp-action="Edit" asp-route-id="1"><i
                                        class="fas fa-edit me-2 fs-6 text-success"></i></a>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#deleteBrandModal"><i
                                        class="fas fa-trash fs-6 text-danger"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- Pagination + Page Size -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <!-- Left: Page Size -->
                <div class="text-muted">
                    Displaying 10 of 43 records
                </div>

                <!-- Right: Pagination -->
                <nav>
                    <cs-pager cs-pager-ul-class="pagination mb-0"
                              cs-pager-li-current-class="page-item active"
                              cs-pager-li-other-class="page-item"
                              cs-pager-link-current-class="page-link"
                              cs-pager-link-other-class="page-link"
                              cs-previous-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-left'></i></a></li>"
                              cs-next-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-right'></i></a></li>"
                              cs-paging-pagesize="@Model.Brands.PageSize"
                              cs-paging-pagenumber="@Model.Brands.PageNumber"
                              cs-paging-totalitems="@Model.Brands.TotalItems"
                              cs-pagenumber-param="pageNumber"
                              asp-controller="Brands"
                              asp-action="Index"
                              cs-show-disabled-page-items="false">
                    </cs-pager>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Delete Brand Modal -->
<div class="modal fade" id="deleteBrandModal" tabindex="-1" aria-labelledby="deleteBrandModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-trash"></i> Delete Brand
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted">
                    Are you sure you want to delete the brand <span class="text-danger">Apple</span>?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-controller="Brands" asp-action="Delete" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

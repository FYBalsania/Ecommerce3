@using Ecommerce3.Domain.Enums
@model Ecommerce3.Admin.ViewModels.UnitOfMeasure.EditUnitOfMeasureViewModel

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">@ViewData["Title"] - @Model.Name</h2>
    </div>

    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0 text-muted py-2"><i class="fas fa-info"></i> General Info</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Code"></label>
                            <input class="form-control" asp-for="Code"/>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Name"></label>
                            <input class="form-control" asp-for="Name"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" asp-for="Type">Type:</label>
                            <select class="form-select" asp-for="Type">
                                <option value="">Select...</option>
                                <option value="@UnitOfMeasureType.Area">Area</option>
                                <option value="@UnitOfMeasureType.Count">Count</option>
                                <option value="@UnitOfMeasureType.Length">Length</option>
                                <option value="@UnitOfMeasureType.Volume">Volume</option>
                                <option value="@UnitOfMeasureType.Weight">Weight</option>
                            </select>
                            <span class="text-danger" asp-for="Type"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="IsActive"></label>
                            <select class="form-select" asp-for="IsActive">
                                <option value="">Select</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold" asp-for="BaseId"></label>
                                <select class="form-select" asp-for="BaseId" asp-items="Model.Bases">
                                    <option value="">Select</option>
                                </select>
                                <span asp-validation-for="BaseId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="ConversionFactor"></label>
                            <input type="number" class="form-control form-control-solid" asp-for="ConversionFactor" />
                            <span asp-validation-for="ConversionFactor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-7">
            <div class="col-xl-12">
                <button type="submit" class="btn btn-primary float-end">Update</button>
            </div>
        </div>
    </form>
</div>
@section StyleSheet
{
    <style>
        .form-control-solid {
            background-color: #f5f8fa;
            border-color: #e4e6ef;
        }

        .form-control[readonly] {
            background-color: #f5f8fa;
            border-color: #e4e6ef;
            cursor: not-allowed;
        }
    </style>
}
@section Scripts
{
    <script>
        $(document).ready(function () {

            const baseSelect = $("#BaseId");
            const conversionInput = $("#ConversionFactor");

            function toggleConversionFactor() {
                if (baseSelect.val()) {
                    conversionInput.prop("readonly", false).removeClass("form-control-solid");
                } else {
                    conversionInput.prop("readonly", true).addClass("form-control-solid").val(1);
                }
            }

            // Initial state
            toggleConversionFactor();

            // On change
            baseSelect.on("change", toggleConversionFactor);
        });
    </script>
}


@using Ecommerce3.Domain.Enums
@model Ecommerce3.Admin.ViewModels.DeliveryWindow.DeliveryWindowIndexViewModel

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">@Model.PageTitle</h2>

        <!-- Right side: button -->
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="DeliveryWindows" asp-action="Add">
                <i class="fas fa-plus"></i> Add New
            </a>
            <!-- Add more button here -->
        </div>
    </div>

    <!-- Main Content -->
    <form method="get" asp-controller="DeliveryWindows" asp-action="Index">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4">
                        <label class="form-label fw-bold" asp-for="Filter.Name">Name:</label>
                        <input type="text" class="form-control" asp-for="Filter.Name" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Unit:</label>
                        <select class="form-select" asp-for="Filter.Unit" asp-items="Html.GetEnumSelectList<DeliveryUnit>()">
                            <option value="" selected="selected">Select Delivery Unit</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Is Active:</label>
                        <select class="form-select" asp-for="Filter.IsActive">
                            <option value="" selected="selected">Any</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Minimum Value:</label>
                        <input type="text" class="form-control" asp-for="Filter.MinValue" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Maximum Value:</label>
                        <input type="text" class="form-control" asp-for="Filter.MaxValue" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary px-4">Filter</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="card mb-4">
        <div class="card-body">
            <!-- Brand Table -->
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th style="width: 55%;">Name</th>
                        <th style="width: 5%;">Unit</th>
                        <th style="width: 10%;">Delivery Time</th>
                        <th class="text-end" style="width: 10%;">Sort Order</th>
                        <th class="text-end" style="width: 15%;">Created</th>
                        <th class="text-center" style="width: 5%;">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var deliveryWindow in Model.DeliveryWindows.Data)
                    {
                        <tr>
                            <td>
                                @deliveryWindow.Name <span class="badge @(deliveryWindow.IsActive ? "bg-success" : "bg-danger") ms-2"> </span><br/>
                            </td>
                            <td>@deliveryWindow.Unit</td>
                            <td>
                                @deliveryWindow.MinValue
                                @if (deliveryWindow.MaxValue != null)
                                {
                                    @("- " + deliveryWindow.MaxValue)
                                }
                                <br/>
                                @if (deliveryWindow.Unit != DeliveryUnit.Day)
                                {
                                    <span class="text-muted">
                                        @deliveryWindow.NormalizedMinDays.ToString("G29")
                                        @if (deliveryWindow.NormalizedMaxDays != null)
                                        {
                                            @("- " + deliveryWindow.NormalizedMaxDays?.ToString("G29"))
                                        }
                                         days
                                    </span>
                                }
                            </td>
                            <td class="text-end">@deliveryWindow.SortOrder</td>
                            <td class="text-end">@deliveryWindow.CreatedUserFullName <br/>@deliveryWindow.CreatedAt.ToString("dd-MMM-yyyy HH:mm tt")
                            </td>
                            <td class="text-center">
                                <a asp-controller="DeliveryWindows"
                                   asp-action="Edit"
                                   asp-route-id="@deliveryWindow.Id">
                                    <i class="fas fa-edit me-2 fs-6 text-success"></i>
                                </a>
                                <a href="#" 
                                   class="delete-deliveryWindow-btn text-decoration-none"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteDeliveryWindowModal"
                                   data-deliveryWindow-id="@deliveryWindow.Id"
                                   data-deliveryWindow-name="@deliveryWindow.Name"><i class="fas fa-trash fs-6 text-danger"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- Pagination + Page Size -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <!-- Left: Page Size -->
                <div class="text-muted">
                    Displaying @Model.DeliveryWindows.Data.Count of @Model.DeliveryWindows.TotalItems records
                </div>

                <!-- Right: Pagination -->
                <nav>
                    <cs-pager cs-pager-ul-class="pagination mb-0"
                              cs-pager-li-current-class="page-item active"
                              cs-pager-li-other-class="page-item"
                              cs-pager-link-current-class="page-link"
                              cs-pager-link-other-class="page-link"
                              cs-show-first-last="true"
                              cs-show-disabled-page-items="true"
                              cs-first-page-text="<i class='fas fa-angles-left'></i>"
                              cs-last-page-text="<i class='fas fa-angles-right'></i>"
                              cs-previous-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-left'></i></a></li>"
                              cs-next-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-right'></i></a></li>"
                              cs-paging-pagesize="@Model.DeliveryWindows.PageSize"
                              cs-paging-pagenumber="@Model.DeliveryWindows.PageNumber"
                              cs-paging-totalitems="@Model.DeliveryWindows.TotalItems"
                              cs-pagenumber-param="pageNumber"
                              asp-controller="DeliveryWindows"
                              asp-action="Index">
                    </cs-pager>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Delete Brand Modal -->
<div class="modal fade" id="deleteBrandModal" tabindex="-1" aria-labelledby="deleteBrandModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-trash"></i> Delete Brand
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted">
                    Are you sure you want to delete the brand 
                    <span id="deleteBrandName" class="fw-bold text-danger"></span>?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-controller="Brands" asp-action="Delete" class="d-inline">
                    <input type="hidden" id="deleteBrandId" name="id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteModal = document.getElementById("deleteBrandModal");

        deleteModal.addEventListener("show.bs.modal", function (event) {
            const button = event.relatedTarget; // Button that triggered the modal
            const brandId = button.getAttribute("data-brand-id");
            const brandName = button.getAttribute("data-brand-name");

            // Set modal content dynamically
            deleteModal.querySelector("#deleteBrandId").value = brandId;
            deleteModal.querySelector("#deleteBrandName").textContent = brandName;
        });
    });
</script>
}

@using Ecommerce3.Domain.Enums
@model Ecommerce3.Admin.ViewModels.Product.ProductsIndexViewModel

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Products</h2>

        <!-- Right side: button -->
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="Products" asp-action="Add">
                <i class="fas fa-plus"></i> Add New
            </a>
            <!-- Add more button here -->
        </div>
    </div>
    
    <!-- Main Content -->
    <form method="get" asp-controller="ProductGroups" asp-action="Index">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Name">Name:</label>
                        <input type="text" class="form-control" asp-for="Filter.Name" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Slug">Slug:</label>
                        <input type="text" class="form-control" asp-for="Filter.Slug" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Display">Display:</label>
                        <input type="text" class="form-control" asp-for="Filter.Display" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Breadcrumb">Breadcrumb:</label>
                        <input type="text" class="form-control" asp-for="Filter.Breadcrumb" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.SKU">SKU:</label>
                        <input type="text" class="form-control" asp-for="Filter.SKU" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Brand">Brand contains:</label>
                        <input type="text" class="form-control" asp-for="Filter.Brand" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold" asp-for="Filter.Category">Category contains:</label>
                        <input type="text" class="form-control" asp-for="Filter.Category" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary px-4">Filter</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th style="width: 50%;">Name & Slug</th>
                            <th style="width: 10%;">SKU</th>
                            <th style="width: 5%;">Category</th>
                            <th class="text-end" style="width: 10%;">Sort Order</th>
                            <th class="text-end" style="width: 5%;">Images</th>
                            <th class="text-end" style="width: 15%;">Created</th>
                            <th class="text-center" style="width: 5%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in Model.Products.Data)
                    {
                        <tr>
                            <td>
                                @product.Name 
                                @{
                                    var (badgeClass, statusText) = product.Status switch
                                    {
                                        ProductStatus.Active => ("bg-success", product.Status.ToString()),
                                        ProductStatus.Inactive => ("bg-secondary", product.Status.ToString()),
                                        ProductStatus.Discontinued => ("bg-danger", product.Status.ToString()),
                                        ProductStatus.RedirectToPrimaryCategory => ("bg-warning", product.Status.ToString()),
                                        ProductStatus.RedirectToUrl => ("bg-warning", product.Status.ToString()),
                                        _ => ("bg-danger", product.Status.ToString())
                                    };
                                }
                                <span class="badge @badgeClass ms-2">@statusText</span><br/>
                                <span class="text-muted">@product.Slug</span>
                            </td>
                            <td>@product.SKU</td>
                            <td>
                                @foreach (var pc in product.Categories.Where(pc => pc.Category != null))
                                {
                                    <span class="badge bg-light text-dark me-1">
                                        @pc.Category!.Name
                                    </span>
                                }
                                @string.Join(", ", product.Categories.Where(pc => pc.Category != null).Select(pc => pc.Category!.Name))
                            </td>
                            <td class="text-end">@product.SortOrder</td>
                            <td class="text-end">@product.ImageCount</td>
                            <td class="text-end">@product.CreatedUserFullName <br/>@product.CreatedAt.ToString("dd-MMM-yyyy HH:mm tt")</td>
                            <td class="text-center">
                                <a asp-controller="Products"
                                   asp-action="Edit"
                                   asp-route-id="@product.Id">
                                    <i class="fas fa-edit me-2 fs-6 text-success"></i>
                                </a>
                                <a href="#" 
                                   class="delete-brand-btn text-decoration-none"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteBrandModal"
                                   data-brand-id="@product.Id"
                                   data-brand-name="@product.Name"><i class="fas fa-trash fs-6 text-danger"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- Pagination + Page Size -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <!-- Left: Page Size -->
                <div class="text-muted">
                    Displaying @Model.Products.Data.Count of @Model.Products.TotalItems records
                </div>

                <!-- Right: Pagination -->
                <nav>
                    <cs-pager cs-pager-ul-class="pagination mb-0"
                              cs-pager-li-current-class="page-item active"
                              cs-pager-li-other-class="page-item"
                              cs-pager-link-current-class="page-link"
                              cs-pager-link-other-class="page-link"
                              cs-show-first-last="true"
                              cs-show-disabled-page-items="true"
                              cs-first-page-text="<i class='fas fa-angles-left'></i>"
                              cs-last-page-text="<i class='fas fa-angles-right'></i>"
                              cs-previous-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-left'></i></a></li>"
                              cs-next-page-html="<li class='page-item'><a href='#' class='page-link'><i class='fas fa-chevron-right'></i></a></li>"
                              cs-paging-pagesize="@Model.Products.PageSize"
                              cs-paging-pagenumber="@Model.Products.PageNumber"
                              cs-paging-totalitems="@Model.Products.TotalItems"
                              cs-pagenumber-param="pageNumber"
                              asp-controller="Products"
                              asp-action="Index">
                    </cs-pager>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Delete Category Modal -->
<div class="modal fade" id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header text-danger">
                <h5 class="modal-title">
                    <i class="fas fa-trash"></i> Delete Product
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted">
                    Are you sure you want to delete the product <span class="text-danger">iPhone 17 Red 128GB</span>?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-controller="Products" asp-action="Delete" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

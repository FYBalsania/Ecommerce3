<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Add Product</h2>
    </div>

    <!-- General -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-info"></i> General Info</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Product Group</label>
                        <select class="select-product form-select">
                            <option value="">Select Product Group</option>
                            <option value="Text">iPhone 17</option>
                            <option value="Number">iPhone 17 Air</option>
                            <option value="DateOnly">iPhone 17 Pro</option>
                            <option value="Boolean">iPhone 17 Pro Max</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Brand</label>
                        <select class="select-brand form-select">
                            <option value="">Select Brand</option>
                            <option value="Text">Apple</option>
                            <option value="Number">Google</option>
                            <option value="DateOnly">Meta</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Categories</label>
                        <select class="select-brand form-select" multiple="multiple">
                            <option value="Text">Accessories</option>
                            <option value="Number">Phone > Apple</option>
                            <option value="DateOnly">Phone > Smart Phone</option>
                            <option value="DateOnly">Phone > Apple > iPhone 17</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Slug</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Display</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Breadcrumbs</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Sort Order</label>
                        <input type="number" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Short Description</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Long Description</label>
                        <div id="longDescriptionEditor" style="height: 200px;"></div>
                        <input type="hidden" id="longDescriptionInput" name="LongDescription">
                    </div>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Is Active : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="IsActive" checked></div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Allow Reviews : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="AllowReviews" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Show Availability : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="ShowAvailability" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Free Shipping : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="FreeShipping" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Is Featured : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="IsFeatured" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Is New : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="IsNew" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Is BestSeller : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="IsBestSeller" checked>
                </div>
            </div>
            <div class="row form-group mb-3 text-muted fw-semibold">
                <div class="col-md-3">
                    <label class="form-label">Is Returnable : </label>
                </div>
                <div class="col-md-9">
                    <input class="form-check-input" type="checkbox" id="IsReturnable" checked>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Identification -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-eye"></i> Identification</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">SKU</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">GTIN</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">MPN</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">MFC</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">EAN</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">UPC</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- SEO -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-magnifying-glass"></i> SEO</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">H1</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Meta Title</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Meta Description</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Meta Keywords</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-7">
        <div class="col-xl-12">
            <button type="submit" class="btn btn-primary float-end">Submit</button>
        </div>
    </div>
</div>
@section StyleSheet
{
    <link href="~/css/select2.min.css" rel="stylesheet">
    <link href="~/css/quill.snow.css" rel="stylesheet">
}
@section Scripts
{
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/quill.min.js"></script>
    <script>
        //Initialize Select 2
        $(document).ready(function() {
            $('.select-product, .select-brand').select2();
        });

        // Initialize Quill
        var quill = new Quill('#longDescriptionEditor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{ header: [1, 2, 3, false] }],
                    [{ font: [] }],                               // Font family
                    ['bold', 'italic', 'underline', 'strike'],    // Formatting
                    [{ color: [] }, { background: [] }],          // Text/Background color
                    [{ list: 'ordered' }, { list: 'bullet' }],    // Lists
                    [{ align: [] }],                              // Alignment
                    ['link', 'image', 'blockquote', 'code-block'], // Media / blocks
                    ['clean']                                     // Clear formatting
                ]
            }
        });
        quill.on('text-change', function () {
            document.getElementById('longDescriptionInput').value = quill.root.innerHTML;
        });
    </script>
}

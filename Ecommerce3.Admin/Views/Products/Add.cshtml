@model Ecommerce3.Admin.ViewModels.Product.AddProductViewModel
<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Add Product</h2>
    </div>

    <!-- Identification -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-eye"></i> Identification</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.SKU">Stock Keeping Unit <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.SKU"/>
                        <span class="text-danger" asp-validation-for="@Model.SKU"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.GTIN"></label>
                        <input class="form-control" asp-for="@Model.GTIN"/>
                        <span class="text-danger" asp-validation-for="@Model.GTIN"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.MPN"></label>
                        <input class="form-control" asp-for="@Model.MPN"/>
                        <span class="text-danger" asp-validation-for="@Model.MPN"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.MFC"></label>
                        <input class="form-control" asp-for="@Model.MFC"/>
                        <span class="text-danger" asp-validation-for="@Model.MFC"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.EAN"></label>
                        <input class="form-control" asp-for="@Model.EAN"/>
                        <span class="text-danger" asp-validation-for="@Model.EAN"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.UPC"></label>
                        <input class="form-control" asp-for="@Model.UPC"/>
                        <span class="text-danger" asp-validation-for="@Model.UPC"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- General -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-info"></i> General Info</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Brand <span class="text-danger">*</span></label>
                        <select class="form-select" asp-for="@Model.BrandId" asp-items="@Model.Brands">
                            <option value="">Select...</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.BrandId"></span>
                    </div>
                </div>
            </div>
            <dic class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Categories <span class="text-danger">*</span></label>
                        <select class="select-brand form-select" multiple="multiple" asp-for="@Model.CategoryId"
                                asp-items="@Model.Categories">
                            <option value="">Select...</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.CategoryId"></span>
                    </div>
                </div>
            </dic>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.ProductGroupId"></label>
                        <select class="select-product form-select" asp-for="@Model.ProductGroupId"
                                asp-items="@Model.ProductGroups">
                            <option value="">Select...</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.ProductGroupId"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.Name">Name <span class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.Name"/>
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.Slug">Slug <span class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.Slug"/>
                        <span class="text-danger" asp-validation-for="@Model.Slug"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.Display">Display <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.Display"/>
                        <span class="text-danger" asp-validation-for="@Model.Display"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.Breadcrumb">Breadcrumb <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.Breadcrumb"/>
                        <span class="text-danger" asp-validation-for="@Model.Breadcrumb"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.AnchorText">Anchor Text <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.AnchorText"/>
                        <span class="text-danger" asp-validation-for="@Model.AnchorText"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.AnchorTitle">Anchor Title <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.AnchorTitle"/>
                        <span class="text-danger" asp-validation-for="@Model.AnchorTitle"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.SortOrder">Sort Order <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.SortOrder"/>
                        <span class="text-danger" asp-validation-for="@Model.SortOrder"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.IsActive">Is Active? <span
                                class="text-danger">*</span></label>
                        <select class="form-select" asp-for="@Model.IsActive">
                            <option value="">Select</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.IsActive"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.Price">Price <span
                                class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.Price"/>
                        <span class="text-danger" asp-validation-for="@Model.Price"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.OldPrice"></label>
                        <input class="form-control" asp-for="@Model.OldPrice"/>
                        <span class="text-danger" asp-validation-for="@Model.OldPrice"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.CostPrice"></label>
                        <input class="form-control" asp-for="@Model.CostPrice"/>
                        <span class="text-danger" asp-validation-for="@Model.CostPrice"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.AdditionalShippingCharge">Additional Shipping
                            Charge <span class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.AdditionalShippingCharge"/>
                        <span class="text-danger" asp-validation-for="@Model.AdditionalShippingCharge"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Unit Of Measure <span class="text-danger">*</span></label>
                        <select class="form-select" asp-for="@Model.UnitOfMeasureId" asp-items="@Model.UnitOfMeasures">
                            <option value="">Select...</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.UnitOfMeasureId"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="@Model.QuantityPerUnitOfMeasure">Quantity Per Unit
                            <span class="text-danger">*</span></label>
                        <input class="form-control" asp-for="@Model.QuantityPerUnitOfMeasure"/>
                        <span class="text-danger" asp-validation-for="@Model.QuantityPerUnitOfMeasure"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Stock <span class="text-danger">*</span></label>
                        <input type="number" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Minimum Stock Quantity <span
                                class="text-danger">*</span></label>
                        <input type="number" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Minimum Order Quantity <span
                                class="text-danger">*</span></label>
                        <input type="number" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Maximum Order Quantity <span
                                class="text-danger">*</span></label>
                        <input type="number" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Delivery Window <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select...</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select...</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Redirect URL</label>
                        <input class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Short Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Long Description <span class="text-danger">*</span></label>
                        <div id="longDescriptionEditor" style="height: 400px;"></div>
                        <input type="hidden" id="longDescriptionInput" name="LongDescription">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Allow reviews <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Show availability <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Free shipping <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Is featured <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Is new <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Is bestseller <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Is returnable <span class="text-danger">*</span></label>
                        <select class="form-select">
                            <option value="">Select Status</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SEO -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-muted py-2"><i class="fas fa-magnifying-glass"></i> SEO</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">H1</label>
                        <input class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Meta Title</label>
                        <input class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Meta Description</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Meta Keywords</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-7">
        <div class="col-xl-12">
            <button type="submit" class="btn btn-primary float-end">Submit</button>
        </div>
    </div>
</div>

@section StyleSheet
{
    <link href="~/css/select2.min.css" rel="stylesheet">
    <link href="~/css/quill.snow.css" rel="stylesheet">
}

@section Scripts
{
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/quill.min.js"></script>
    <script>
        //Initialize Select 2
        $(document).ready(function () {
            $('.select-product, .select-brand').select2();
        });

        // Initialize Quill
        var quill = new Quill('#longDescriptionEditor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{header: [1, 2, 3, false]}],
                    [{font: []}],                               // Font family
                    ['bold', 'italic', 'underline', 'strike'],    // Formatting
                    [{color: []}, {background: []}],          // Text/Background color
                    [{list: 'ordered'}, {list: 'bullet'}],    // Lists
                    [{align: []}],                              // Alignment
                    ['link', 'image', 'blockquote', 'code-block'], // Media / blocks
                    ['clean']                                     // Clear formatting
                ]
            }
        });
        quill.on('text-change', function () {
            document.getElementById('longDescriptionInput').value = quill.root.innerHTML;
        });
    </script>
}

    <!-- Product Attributes Value for Storage-->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-muted py-2">
                <i class="fas fa-pencil"></i> Values
            </h5>
            <button class="btn btn-sm btn-primary" data-bs-toggle="modal"
                    data-bs-target="#addProductAttributeColourValueModal">
                <i class="fas fa-plus"></i> Add Value
            </button>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                @if (Model.DataType == DataType.Colour)
                                    {
                                        <th style="width: 35%;">Name/Slug</th>
                                        <th style="width: 10%;">Hex</th>
                                        <th style="width: 10%;">Colour Family</th>
                                        <th style="width: 15%;">Colour Family Hex</th>
                                    }
                                    else
                                    {
                                        <th style="width: 60%;">Name/Slug</th>
                                        <th style="width: 10%;">Value</th>
                                    }
                                <th class="text-end" style="width: 10%;">Sort Order</th>
                                <th class="text-end" style="width: 15%;">Created</th>
                                <th class="text-center" style="width: 5%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var val in Model.Values)
                                {
                                    <tr>
                                        <td>
                                            @val.Value <br/>
                                            <span class="text-muted">@val.Slug</span>
                                        </td>
                                        @if (Model.DataType == DataType.Colour)
                                        {
                                            var colour = val as ProductAttributeColourValueDTO;

                                            <td>@colour?.HexCode</td>
                                            <td>@colour?.ColourFamily</td>
                                            <td>@colour?.ColourFamilyHexCode</td>
                                        }
                                        else
                                        {
                                            <td>
                                                @{
                                                    var display = Model.DataType switch
                                                    {
                                                        DataType.Boolean => (val as ProductAttributeBooleanValueDTO)?.BooleanValue.ToString(),
                                                        DataType.Decimal => (val as ProductAttributeDecimalValueDTO)?.DecimalValue.ToString(),
                                                        DataType.DateOnly => (val as ProductAttributeDateOnlyValueDTO)?.DateOnlyValue.ToString(),
                                                    };
                                                }
                                                @display
                                            </td>
                                        }
                                        <td class="text-end">@val.SortOrder</td>
                                        <td class="text-end">@val.CreatedUserFullName <br/>@val.CreatedAt.ToString("dd-MMM-yyyy HH:mm tt")
                                        <td class="text-center">
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#editProductAttributeColourValueModal">
                                                <i class="fas fa-edit me-2 fs-6 text-success"></i>
                                            </a>
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#deleteProductAttributeColourValueModal">
                                                <i class="fas fa-trash fs-6 text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-7">
        <div class="col-xl-12">
            <button type="submit" class="btn btn-primary float-end">Update</button>
        </div>
    </div>
</div>


@using Ecommerce3.Contracts.DTOs
@using Ecommerce3.Domain.Enums
@model Ecommerce3.Admin.ViewModels.ProductAttribute.EditProductAttributeViewModel

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Edit Product Attribute - @Model.Name</h2>
    </div>

    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" id="Id" value="@Model.Id"/>

        <!-- General -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0 text-muted py-2"><i class="fas fa-info"></i> General Info</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Name"></label>
                            <input type="text" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Slug"></label>
                            <input type="text" class="form-control" asp-for="Slug">
                            <span asp-validation-for="Slug" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Display">Display</label>
                            <input type="text" class="form-control" asp-for="Display">
                            <span asp-validation-for="Display" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="Breadcrumb"></label>
                            <input type="text" class="form-control" asp-for="Breadcrumb">
                            <span asp-validation-for="Breadcrumb" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold required" asp-for="SortOrder"></label>
                            <input type="number" class="form-control" asp-for="SortOrder">
                            <span asp-validation-for="SortOrder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold" asp-for="DataType"></label>
                            <input class="form-control" asp-for="DataType" disabled/>
                            <span asp-validation-for="DataType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Attributes Value for Storage-->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-muted py-2">
                    <i class="fas fa-pencil"></i> Values
                </h5>
                @if (Model.DataType != DataType.Boolean)
                {
                    <a href="#" class="btn btn-sm btn-primary"
                       data-bs-toggle="modal"
                       data-bs-target="@(Model.DataType switch
                                       {
                                           DataType.Colour => "#add_ColourValueModal",
                                           DataType.Default => "#add_ValueModal",
                                           DataType.DateOnly => "#add_DateOnlyValueModal",
                                           DataType.Decimal => "#add_DecimalValueModal",
                                           _ => ""
                                       })">
                        <i class="fas fa-plus"></i> Add Value
                    </a>
                }
            </div>
            <div class="card-body">
                <div class="card-body">
                    <div class="table-responsive">
                        @switch (Model.DataType)
                        {
                            case DataType.Default:
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 35%;">Value/Slug</th>
                                        <th style="width: 35%;">Display/Breadcrumb</th>
                                        <th class="text-end" style="width: 10%;">Sort Order</th>
                                        <th class="text-end" style="width: 15%;">Created</th>
                                        <th class="text-center" style="width: 5%;">Action</th>
                                    </tr>
                                    </thead>
                                    <partial name="_ProductAttributeValueListPartial" model="Model.Values"/>
                                </table>
                                break;
                            case DataType.Decimal:
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 35%;">Value/Slug</th>
                                        <th style="width: 35%;">Display/Breadcrumb</th>
                                        <th class="text-end" style="width: 10%;">Sort Order</th>
                                        <th class="text-end" style="width: 15%;">Created</th>
                                        <th class="text-center" style="width: 5%;">Action</th>
                                    </tr>
                                    </thead>
                                    <partial name="_ProductAttributeDecimalValueListPartial"
                                             model="Model.Values.OfType<ProductAttributeDecimalValueDTO>().ToList()"/>
                                </table>
                                break;
                            case DataType.Colour:
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 25%;">Value/Slug</th>
                                        <th style="width: 25%;">Display/Breadcrumb</th>
                                        <th style="width: 20%">Colour Hex/Family/Family Hex</th>
                                        <th class="text-end" style="width: 10%;">Sort Order</th>
                                        <th class="text-end" style="width: 15%;">Created</th>
                                        <th class="text-center" style="width: 5%;">Action</th>
                                    </tr>
                                    </thead>
                                    <partial name="_ProductAttributeColourValueListPartial"
                                             model="Model.Values.OfType<ProductAttributeColourValueDTO>().ToList()"/>
                                </table>
                                break;
                            case DataType.DateOnly:
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 35%;">Value/Slug</th>
                                        <th class="text-end" style="width: 10%;">Sort Order</th>
                                        <th class="text-end" style="width: 15%;">Created</th>
                                        <th class="text-center" style="width: 5%;">Action</th>
                                    </tr>
                                    </thead>
                                    <partial name="_ProductAttributeDateOnlyValueListPartial"
                                             model="Model.Values.OfType<ProductAttributeDateOnlyValueDTO>().ToList()"/>
                                </table>
                                break;
                            case DataType.Boolean:
                                <table class="table align-middle">
                                    <thead>
                                    <tr>
                                        <th style="width: 35%;">Value/Slug</th>
                                        <th style="width: 35%;">Display/Breadcrumb</th>
                                        <th class="text-end" style="width: 10%;">Sort Order</th>
                                        <th class="text-end" style="width: 15%;">Created</th>
                                        <th class="text-center" style="width: 5%;">Action</th>
                                    </tr>
                                    </thead>
                                    <partial name="_ProductAttributeBooleanValueListPartial"
                                             model="Model.Values.OfType<ProductAttributeBooleanValueDTO>().ToList()"/>
                                </table>
                                break;
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-7">
            <div class="col-xl-12">
                <button type="submit" class="btn btn-primary float-end">Update</button>
            </div>
        </div>
    </form>

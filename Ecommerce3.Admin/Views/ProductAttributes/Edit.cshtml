                                             model="Model.Values.OfType<ProductAttributeDateOnlyValueDTO>().ToList()" /> 
                                    break;
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-7">
            <div class="col-xl-12">
                <button type="submit" class="btn btn-primary float-end">Update</button>
            </div>
        </div>
    </form>

@switch (Model.DataType)
{
    case DataType.Text:
        @:<!-- Add Product Attribute Value Modal -->
        <div class="modal fade" id="add_ProductAttributeValueModal" tabindex="-1"
             aria-labelledby="addProductAttributeValueModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-muted" id="addProductAttributeValueModalLabel">
                            <i class="fas fa-plus"></i> Add Value
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" value="ProductAttributeValue"/>
                        @* Or *@
                        <input type="hidden" value="ProductAttributeColourValue"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Value</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">

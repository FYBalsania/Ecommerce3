        <div class="modal" id="edit_ProductAttributeDecimalValueModal" tabindex="-1"></div>
        
        // Delete Product Attribute Decimal Value Modal.
        <div class="modal" id="delete_ProductAttributeDecimalValueModal" tabindex="-1"></div>

        break;
    default:
            throw new ArgumentOutOfRangeException();
}

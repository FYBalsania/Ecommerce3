@model Ecommerce3.Admin.ViewModels.Page.PagesIndexResponse

<div class="content-section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <!-- Left side: Heading -->
        <h2 class="text-danger fw-bold fs-3 mb-0">Pages</h2>

        <!-- Right side: button -->
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-controller="Pages" asp-action="Add">
                <i class="fas fa-plus"></i> Add New
            </a>
            <!-- Add more button here -->
        </div>
    </div>

    <!-- Main Content -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Name contains</label>
                    <input type="text" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Is active</label>
                    <select class="form-select">
                        <option value="">Select Status</option>
                        <option value="0">Any</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary px-4">Filter</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <!-- Brand Table -->
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th style="width: 20%;">Discriminator</th>
                        <th style="width: 10%;">Path</th>
                        <th style="width: 10%;">Brand</th>
                        <th style="width: 10%;">Category</th>
                        <th style="width: 10%;">Product</th>
                        <th style="width: 10%;">Product Group</th>
                        <th class="text-end" style="width: 20%;">Created</th>
                        <th class="text-center" style="width: 10%;">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var pageItem in Model.PageListItems)
                    {
                        <tr>
                            <td>
                                @pageItem.Discriminator <span class="badge @(pageItem.IsActive ? "bg-success" : "bg-danger") ms-2"> </span><br/>
                            </td>
                            <td>@pageItem.Path</td>
                            <td>@pageItem.BrandId</td>
                            <td>@pageItem.CategoryId</td>
                            <td>@pageItem.ProductId</td>
                            <td>@pageItem.ProductGroupId</td>
                            <td class="text-end">@pageItem.CreatedUserFullName <br/>@pageItem.CreatedAt.ToString("dd-MMM-yyyy HH:mm tt")</td>
                            <td class="text-center">
                                <a asp-controller="Pages" asp-action="Edit" asp-route-id="1"><i class="fas fa-edit me-2 fs-6 text-success"></i></a>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#deletePageModal"><i class="fas fa-trash fs-6 text-danger"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- Pagination + Page Size -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <!-- Left: Page Size -->
                <div class="text-muted">
                    Displaying 10 of 43 records
                </div>

                <!-- Right: Pagination -->
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>